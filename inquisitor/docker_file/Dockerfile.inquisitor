FROM debian:latest

RUN apt-get update && apt-get install -y build-essential fish iputils-ping net-tools tcpdump iptables

ARG MAC_SRC
ARG IP_SRC
ARG MAC_TARGET
ARG IP_TARGET

WORKDIR /inquisitor

COPY ../src ./src
COPY ../inc ./inc
COPY ../build.sh .
COPY ../run.sh .

COPY ./apply_iptables.sh /tmp
RUN chmod +x /tmp/apply_iptables.sh

ENTRYPOINT ["/tmp/apply_iptables.sh"]
